{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext" /* 编译目标模块系统*/,
    "declaration": true /* 编译时创建声明文件 */,
    "outDir": "./dist",
    "strict": true,

    "lib": ["es6"],
    "esModuleInterop": true,
    "moduleResolution": "nodenext"
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}
